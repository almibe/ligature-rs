import Gaze from "./gaze"
import List from "list"

export let take = (t) => (gaze) => {
    if (Gaze.next(gaze) == Some(t)) {
        Some([t])
    } else {
        None
    }
}

export let takeCond = predicate => (gaze) => {
    let mut cont = true
    let mut results = []
    while (cont) {
        let next = Gaze.peek(gaze)
        match (next) {
            Some(value) when predicate(value) => {
                Gaze.next(gaze)
                results = List.append(results, [value])
                cont = true
            },
            _ => cont = false
        }
    }
    if (List.length(results) == 0) {
        None
    } else {
        Some(results)
    }
}

export let takeCondI = predicate => (gaze) => {
    let mut index = 0
    let mut cont = true
    let mut results = []
    while (cont) {
        let next = Gaze.peek(gaze)
        match (next) {
            Some(value) when predicate(value, index) => {
                Gaze.next(gaze)
                results = List.append(results, [value])
                cont = true
                index += 1
            },
            _ => cont = false
        }
    }
    if (List.length(results) == 0) {
        None
    } else {
        Some(results)
    }
}

export let between = (opening, content, closing) => (gaze) => {
    if (Gaze.next(gaze) == Some(opening)) {
        match (Gaze.attempt(content, gaze)) {
            Some(result) => {
                print(Gaze.isComplete(gaze))
                print(Gaze.peek(gaze))
                print(result)
                if (Gaze.next(gaze) == Some(closing)) {
                    Some(result)
                } else {
                    None
                }
            },
            None => None
        }
    } else {
        None
    }
}
